    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch {{ idl_file_name }} publisher",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/bin/Debug/{{ example_architecture }}/{{ idl_file_name }}.dll",
            "args": ["--pub"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },
        {
            "name": "Launch {{ idl_file_name }} subscriber",
            "type": "coreclr",
            "request": "launch",
            "preLaunchTask": "dotnet: build",
            "program": "${workspaceFolder}/bin/Debug/{{ example_architecture }}/{{ idl_file_name }}.dll",
            "args": ["--sub"],
            "cwd": "${workspaceFolder}",
            "stopAtEntry": false,
            "console": "internalConsole"
        },

    ]
}